@model avd4.Models.Pedido

@{
    ViewData["Title"] = "Create";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Pedido</a></li>
        <li class="breadcrumb-item active" aria-current="page">Adicionar</li>
    </ol>
</nav>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ClienteId" class="control-label">Cliente</label>
                        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Cliente"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProdutoId" class="control-label">Produto</label>
                        <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.Produto"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-success btn-sm" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <a asp-action="Index" class="btn btn-primary btn-sm">Voltar</a>
            </div>
        </div>
    </div>
</div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
