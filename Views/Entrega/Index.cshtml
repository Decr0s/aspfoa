@model IEnumerable<avd4.Models.Entrega>

@{
    ViewData["Title"] = "Index";
}

<h1>Entregas</h1>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>
                                Data e Hora
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pedido.Cliente)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataHora)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pedido.Cliente.Nome)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.id" class="badge badge-primary">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.id" class="badge badge-info">Detalhes</a> |
                                    <a asp-action="Delete" asp-route-id="@item.id" class="badge badge-danger">Deletar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
