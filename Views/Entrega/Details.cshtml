@model avd4.Models.Entrega

@{
    ViewData["Title"] = "Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Entregas</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detalhes</li>
    </ol>
</nav>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4>Entrega</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DataHora)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataHora)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Pedido)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Pedido.Cliente.Nome)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Pedido.Produto)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Pedido.Produto.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Pedido.Produto.Valor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Pedido.Produto.Valor)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-info btn-sm">Editar</a> |
                <a asp-action="Index" class="btn btn-primary btn-sm">Voltar</a>
            </div>
        </div>
    </div>
</div>
